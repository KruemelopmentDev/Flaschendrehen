<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFDC893D"
    android:padding="20dp">

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            android:text="Namensvorschläge löschen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            android:text="eigene Pflichten löschen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView23"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            android:text="eigene Wahrheiten löschen"
            android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:clickable="true"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@id/checkBox"
        android:layout_below="@id/checkBox"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:clickable="true"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@id/checkBox2"
        android:layout_below="@id/checkBox2"
        android:layout_marginTop="10dp"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:clickable="true"
        android:focusable="true" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/checkBox"
        android:layout_toStartOf="@id/checkBox"
        android:layout_marginEnd="10dp"
        android:textSize="30sp"
        android:text="Nur App Aufgaben spielen"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/checkBox2"
        android:text="Nur eigene Aufgaben spielen"
        android:layout_toStartOf="@id/checkBox2"
        android:layout_marginEnd="10dp"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark" />



    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Nochmal drehen, wenn die Person direkt davor schon dran war"
        android:layout_toStartOf="@id/checkBox3"
        android:layout_marginEnd="10dp"
        android:textSize="30sp"
        android:layout_alignBaseline="@id/checkBox3"
        android:textColor="@android:color/black" />
</RelativeLayout>