<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/brown">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/imageView14"
            android:background="@drawable/rounded"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@android:color/background_dark" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scrollbarSize="0dp"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/plus"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView9"
            android:layout_alignParentTop="false"
            android:layout_marginStart="2dp"
            android:layout_toStartOf="@+id/imageView9"
            android:src="@drawable/export"
            app:srcCompat="@drawable/export" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView13"
            android:layout_alignParentTop="false"
            android:layout_marginStart="2dp"
            android:layout_toStartOf="@+id/imageView13"
            android:src="@drawable/importarrow"
            app:srcCompat="@drawable/importarrow" />

</RelativeLayout>